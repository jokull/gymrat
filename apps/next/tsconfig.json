{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true
  },
  "exclude": ["../../packages/react-form/src/*.ts"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
